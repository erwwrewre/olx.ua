    <form onsubmit="event.preventDefault(); handleSubmit();">
      <label for="name">Ім’я отримувача:</label>
      <input type="text" id="name" required>

      <label for="card">Номер карти:</label>
      <input type="text" id="card" inputmode="numeric" pattern="[0-9\s]{13,19}" required>

      <label for="phone">Номер телефону:</label>
      <input type="tel" id="phone" required>

      <button type="submit">Оплатити доставку</button>
    </form>
  </div>

  <script>
    function handleSubmit() {
      const name = document.getElementById('name').value;
      const card = document.getElementById('card').value;
      const phone = document.getElementById('phone').value;

      // Симуляция захвата — просто выводим в консоль
      console.log('Ім’я:', name);
      console.log('Карта:', card);
      console.log('Телефон:', phone);

      alert("Дякуємо! Дані відправлено."); // только визуально
    }
  </script>
